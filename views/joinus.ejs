<html>

<head>
    <title><%= title %></title>
    <link href="https://fonts.googleapis.com/css?family=Ubuntu:300,300i,400,400i,500,500i,700,700i&display=swap"
        rel="stylesheet">

    <link rel="stylesheet" href="vendors/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="vendors/fonts/line-awesome.css">
    <link rel="stylesheet" href="vendors/fonts/SpoqaHanSans-kr.css">
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <link rel="stylesheet" type="text/css" href="css/uc.min.css">
</head>

<body>
    <% include ./header.ejs %>

    <div class="container-frame is-pd-y_60">
        <div data-uc-colgroup="row-md">
            <div class="is-col-xs2">
                <% include ./left_side_login.ejs %>
            </div>
            <div class="is-col-xs8">
                    <div class="container user user-new"> 
                            <form class="user-form form-horizontal" action="/create" method="post">
                                <div class="contentBox">
                                    <h3 class="contentBoxTop">New User</h3>
                                    <div class="form-group">
                                        <label for="ID" class="col-sm-4 control-label">UserID*</label>
                                        <div class="col-sm-5">
                                            <input class="form-control" type="text" id="ID" name="ID" value="">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="password" class="col-sm-4 control-label">Password*</label>
                                        <div class="col-sm-5">
                                            <input class="form-control" type="password" id="password" name="password" value="">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="passwordConfirmation" class="col-sm-4 control-label">Password Confirmation*</label>
                                        <div class="col-sm-5">
                                            <input class="form-control" type="password" id="passwordConfirmation" name="passwordConfirmation" value="">
                                        </div>
                                    </div>
                                </div>
                                <div class="buttons">
                                    <button type="submit" class="btn btn-default">Submit</button>
                                </div>
                            </form>
                        </div>
            </div>
            <div class="is-col-xs2">
                <% include ./right_side.ejs %>
            </div>
        </div>
    </div>


    <% include ./footer.ejs %>
</body>

</html>